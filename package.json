{
  "name": "monetas-api",
  "main": "app.js",
  "scripts": {
    "dev": "better-npm-run dev",
    "staging": "better-npm-run staging",
    "prod": "better-npm-run prod"
  },
  "betterScripts": {
    "dev": {
      "command": "node ./src/app.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development"
      }
    },
    "prod": {
      "command": "node ./src/app.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production"
      }
    },
    "staging": {
      "command": "node ./src/app.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "staging"
      }
    }
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "better-npm-run": "0.0.9",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.7.1",
    "express": "^4.14.0",
    "glob": "^7.0.5",
    "mongoose": "^4.5.2",
    "request": "^2.72.0"
  }
}
